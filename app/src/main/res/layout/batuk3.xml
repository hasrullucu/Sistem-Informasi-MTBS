<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    tools:context=".view.pemeriksaan.PemeriksaanMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:weightSum="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGejala"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="gejala"
            android:background="@drawable/my_button_bg"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:fontFamily="@font/lato_medium"
            />

        <Button
            android:id="@+id/btnKlas"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="klasifikasi"
            android:background="@drawable/my_button_bg"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:fontFamily="@font/lato_medium"/>

        <Button
            android:id="@+id/btnTindakan"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="tindakan"
            android:background="@drawable/my_button_bg"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:fontFamily="@font/lato_medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:weightSum="4">

        <TextView
            android:id="@+id/tvTBU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MEMERIKSA BATUK ATAU SUKAR BERNAPAS (3/3)"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_weight="0.2"
            android:textStyle="bold"
            android:fontFamily="@font/lato_medium"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:id="@+id/checkboxTarikan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ada tarikan dinding ke dalam"
            android:textSize="25dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_medium"
            android:layout_marginLeft="20dp"/>
        <CheckBox
            android:id="@+id/checkboxWheezing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat dan dengar adanya wheezing"
            android:textSize="25dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_medium"
            android:layout_marginLeft="20dp"/>
        <CheckBox
            android:id="@+id/checkboxOksigen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saturasi oksigen  90%"
            android:textSize="25dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_medium"
            android:layout_marginLeft="20dp"/>

        />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Kembali"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/my_button_bg"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>
        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btnNext"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Lanjut"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/my_button_bg"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Â© 2019 Manajemen Terpadu Balita Sakit"
            android:textAlignment="center"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:elevation="4dp"
    android:background="@color/greenBackground"
    tools:context=".testing.TandaBahayaUmum_Fragment">

    <include layout="@layout/pemeriksaan_header">

    </include>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/montserratbold"
            android:shadowColor="@color/shadowColor"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="MASALAH TELINGA"
            android:textColor="@color/greyBackground"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        >

        <CheckBox
            android:id="@+id/cb_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:buttonTint="@color/white"
            android:text="checkbox"
            android:textColor="@color/white"
            android:textSize="20sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/montserratbold"

            />

        <CheckBox
            android:id="@+id/cb_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginTop="8dp"
            android:buttonTint="@color/white"
            android:text="checkbox"
            android:textColor="@color/white"

            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_1"
            android:fontFamily="@font/montserratbold"

            />

        <CheckBox
            android:id="@+id/cb_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginTop="8dp"
            android:buttonTint="@color/white"

            android:text="checkbox"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_4"
            android:fontFamily="@font/montserratbold"

            />

        <CheckBox
            android:id="@+id/cb_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginTop="44dp"

            android:buttonTint="@color/white"
            android:text="checkbox"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_3"

            android:fontFamily="@font/montserratbold"

            />

        <CheckBox
            android:id="@+id/cb_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginTop="8dp"
            android:buttonTint="@color/white"
            android:text="checkbox"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_5"
            android:fontFamily="@font/montserratbold"

            />

        <CheckBox
            android:id="@+id/cb_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginTop="8dp"
            android:buttonTint="@color/white"
            android:text="checkbox"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_7"
            android:fontFamily="@font/montserratbold"

            />

        <CheckBox
            android:id="@+id/cb_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginTop="8dp"

            android:buttonTint="@color/white"
            android:text="checkbox"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_3"
            android:fontFamily="@font/montserratbold"

            />

        <CheckBox
            android:id="@+id/cb_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginTop="8dp"
            android:buttonTint="@color/white"
            android:text="checkbox"

            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_2"
            android:fontFamily="@font/montserratbold"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/pemeriksaan_footer">
    </include>


</LinearLayout>
<?xml version = "1.0" encoding = "utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenBackground"
    tools:context=".view.pemeriksaan.PemeriksaanMain">
    <include layout="@layout/btn_kembali_layout" android:id="@+id/btn_Kembali"></include>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="181dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="320dp"
        android:background="@color/redstatus"
        android:padding="4dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"

        android:weightSum="1"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:src="@drawable/ic_warning"
            android:layout_weight="0.3"
            />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:textAlignment="center"

            android:fontFamily="@font/montserratbold"
            android:text="PERHATIAN"
            android:textColor="@color/white"
            android:textSize="36sp"
             />

        <TextView
            android:id="@+id/tindakanAuto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:textAlignment="center"
            android:text="Proses MTBS akan dilakukan \n sesuai prosedur untuk \n balita umur 2 bulan - 5 Tahun"
            android:textColor="@color/white"
            app:fontFamily="@font/montserratbold"
             />

    </LinearLayout>

    <include layout="@layout/btn_selanjutnya_layout" android:id="@+id/btn_Selanjutnya">

    </include>

</androidx.constraintlayout.widget.ConstraintLayout>
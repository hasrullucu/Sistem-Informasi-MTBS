<?xml version = "1.0" encoding = "utf-8" ?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="5"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--bagian judul data diri-->
    <LinearLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <!--textview judul mtbs-->
        <TextView
            android:id="@+id/isiDataAnak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi Data Anak"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_bold"
            />
    </LinearLayout>


    <!--bagian isi tanggal pemeriksaan-->
    <LinearLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2">
        <!--data diri-->

        <!--tanggal-->
        <TextView
            android:id="@+id/beratBadan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berat Badan"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:fontFamily="@font/lato_bold"/>

        <EditText
            android:id="@+id/beratFill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:background="#2156ab"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            tools:ignore="DuplicateIds" />

    </LinearLayout>


    <LinearLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2">


        <TextView
            android:id="@+id/tangal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tinggi Badan"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:fontFamily="@font/lato_bold"
            />

        <EditText
            android:id="@+id/tanggalLahirFill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:background="#2156ab"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <LinearLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2">
        <!--data dirii-->
        <TextView
            android:id="@+id/kunjungan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suhu"
            android:textSize="20dp"
            android:textAlignment="center"
            tools:ignore="DuplicateIds"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/lato_bold"/>

        <!--isi nama ibu-->
        <EditText
            android:id="@+id/kunjunganFill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:background="#2156ab"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/lato_bold"
            />
    </LinearLayout>


    <LinearLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2">




    </LinearLayout>


    <!--bagian progress bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Kembali"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/my_button_bg"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>
        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btnNext"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Lanjut"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/my_button_bg"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>
    </LinearLayout>


    <!--bagian footer-->
    <LinearLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.1">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â© 2019 Manajemen Terpadu Balita Sakit"
            android:textSize="10dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center" />

    </LinearLayout>


</LinearLayout>